<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.WorkshopController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="Workshop Form" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
        <font>
            <Font size="24" />
        </font>
    </Label>

    <Label text="Workshop Name" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="workshopNameTextField1" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Description" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextArea fx:id="descriptionTextArea1" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Start Date" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <DatePicker fx:id="startDatePicker1" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="End Date" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <DatePicker fx:id="endDatePicker1" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Location" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="locationTextField1" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Max Attendees" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="maxAttendeesTextField1" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Label text="Registration Deadline" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <DatePicker fx:id="registrationDeadlinePicker1" GridPane.columnIndex="1" GridPane.rowIndex="7" />

    <Label text="Agenda" GridPane.columnIndex="0" GridPane.rowIndex="8" />
    <TextArea fx:id="agendaTextArea1" GridPane.columnIndex="1" GridPane.rowIndex="8" />

    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="9">
        <Button fx:id="saveButton1" onAction="#saveWorkshop" text="Save" />
        <Button fx:id="cancelButton1" onAction="#cancell" text="Cancel" />
    </HBox>
