<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProfileController">
    <VBox prefWidth="600.0" spacing="20.0" style="-fx-padding: 30px;">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Your profile" />
        <HBox spacing="10.0">
            <Label style="-fx-font-size: 14px;" text="First Name:" />
         <Label fx:id="laFirstName" prefHeight="18.0" prefWidth="182.0" />
        </HBox>
        <HBox spacing="10.0">
            <Label style="-fx-font-size: 14px;" text="Last Name:" />
         <Label fx:id="lLastName" prefHeight="18.0" prefWidth="224.0" />
        </HBox>
        <HBox prefHeight="86.0" prefWidth="539.0" spacing="10.0">
            <Label style="-fx-font-size: 14px;" text="Bio:" />
         <Label fx:id="lAboutMe" prefHeight="18.0" prefWidth="396.0" />
        </HBox>
        <HBox spacing="10.0">
            <Label style="-fx-font-size: 14px;" text="Phone Number:" />
         <Label fx:id="lPhoneNumber" prefHeight="18.0" prefWidth="201.0" />
        </HBox>
        <HBox spacing="20.0">
            <Button fx:id="editProfileButton" onAction="#editProfile" text="Edit Profile" />
            <Button fx:id="logoutButton" onAction="#logout" text="Logout" />
        </HBox>
    </VBox>
</AnchorPane>
